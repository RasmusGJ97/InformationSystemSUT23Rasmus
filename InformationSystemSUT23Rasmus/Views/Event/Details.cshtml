@model Event

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0">Event Details</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-muted">Event ID:</h5>
                    <p>@Html.DisplayFor(model => model.EventID)</p>
                </div>
                <div class="col-md-6">
                    <h5 class="text-muted">Driver Name:</h5>
                    <p>@Html.DisplayFor(model => model.Driver.DriverName)</p>
                </div>
                <div class="col-md-6">
                    <h5 class="text-muted">Car Reg. nr:</h5>
                    <p>@Html.DisplayFor(model => model.Driver.CarReg)</p>
                </div>
                <div class="col-md-6">
                    <h5 class="text-muted">Note Date:</h5>
                    <p>@Html.DisplayFor(model => model.NoteDate)</p>
                </div>
                <div class="col-md-6">
                    <h5 class="text-muted">Belopp Ut:</h5>
                    <p>@Html.DisplayFor(model => model.BeloppUt)</p>
                </div>
                <div class="col-md-6">
                    <h5 class="text-muted">Belopp In:</h5>
                    <p>@Html.DisplayFor(model => model.BeloppIn)</p>
                </div>
                <div class="col-md-6">
                    <h5 class="text-muted">Note Description:</h5>
                    <p>@Html.DisplayFor(model => model.NoteDescription)</p>
                </div>
            </div>

        <div class="card-footer text-right">
            <a asp-action="AllEvents" class="btn btn-secondary">
                Back to List <i class="fas fa-arrow-left"></i>
            </a>
        </div>
    </div>
</div>