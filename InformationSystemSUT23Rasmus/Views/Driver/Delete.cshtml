@model Driver

<h2>Are you sure You want to delete this driver?</h2>



<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h6 class="card-title"><strong>Driver Name: </strong>@Html.DisplayFor(model => model.DriverName)</h6>
            <h6 class="card-text"><strong>Car Reg. Nr: </strong>@Html.DisplayFor(model => model.CarReg)</h6>
            <div class="d-flex justify-content-between mt-4">
                <form asp-action="Delete" method="post" class="d-inline">
                    <input asp-for="DriverID" type="hidden" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete <i class="fa fa-trash"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

